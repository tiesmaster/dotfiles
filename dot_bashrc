
[ -f ~/.bashrc.local ] && . ~/.bashrc.local

# env vars
export LESS="FRXi"

# Aliases

# aliases: git
alias gs='git status'
alias gb='git branch'
alias ga='git ca'
alias gd='git diff'

# aliases: lazy*
alias lzd='lazydocker'
alias lzg='lazygit'

# aliases: chezmoi
alias cz=chezmoi
alias czs='chezmoi status'
alias czd='chezmoi diff -v'
alias cza='chezmoi apply -v'
alias czu='chezmoi update -v'

alias cze='chezmoi edit --apply -v'

alias czc='chezmoi cd'

	#list commands
	tryout-le = log --oneline --decorate
	tryout-ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	tryout-ls1 = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	tryout-ld = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
	tryout-lds = log --pretty=format:"%C(yellow)%h\\ %C(green)%ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short --graph
	tryout-lc  = "!f() { git ll "$1"^.."$1"; }; f"
	tryout-lnc = log --pretty=format:"%h\\ %s\\ [%cn]"
	#list all aliases
	tryout-diff = diff --word-diff
	tryout-d = diff --word-diff
	tryout-dc = diff --cached
	#list modified files in last commit

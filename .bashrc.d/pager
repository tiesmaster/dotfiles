# sane less settings
if [[ -f /usr/bin/less ]] ; then
    export PAGER=less
    export LESS="${LESS} --ignore-case --long-prompt --raw-control-chars"
fi

# vimpager

if [[ -f /usr/bin/vimpager ]]
then
    export PAGER=vimpager
    export MANPAGER=vimmanpager
else

	for vim_version in "vim72 vim70 vim70aa vim63"
	do
		pager=/usr/share/vim/${vim_version}/macros/less.sh
		if [[ -f $pager ]] ; then
			export PAGER=${pager}
			break
		fi
	done

	if [ ! $PAGER ]
	then
		echo "~/.bashrc.d/pager: vimpager was not found, please install"
	fi
fi

alias less=${PAGER}

# vim:filetype=sh:

#TODO: get this working on all platforms, perhaps make it sense it's already
#	running within a screen and act on that (don't startup screen?, remap
#	shortcuts to new "shortcut-ring"?)

RunScreen() {
	if [[ $TERM != screen* ]] && [[ $- = *i* ]] ; then

		# make sure screen starts up with the SHELL opt in cygwin (issue #1)
		[[ "`uname`" = CYGWIN* ]] && SCREEN_OPTS="-s $SHELL"

		exec screen -dRR $SCREEN_OPTS
	fi
}

if [ `which screen 2>/dev/null` ] ; then
	RunScreen
else
	echo "screen: screen was not found, please install"
fi

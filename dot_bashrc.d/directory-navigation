# bash cd configuration
shopt -s cdspell

# aliases: bash
alias pd="pushd"
alias pp="popd"

export CDPATH=.:~:~/src:~/src/guida:~/src/guida/customers

# tere configuration

# shellcheck disable=SC2155 disable=SC2164
TERE_OPTS=--gap-search-anywhere

tere() {
    local result=$(command tere $TERE_OPTS "$@")
    [ -n "$result" ] && cd -- "$result"
}

alias t=tere

# zoxide configuration
eval "$(zoxide init bash)"
export _ZO_DATA_DIR="$HOME/.config/zoxide/"
